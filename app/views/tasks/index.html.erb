<p id="notice"><%= notice %></p>

<h1>Liste des Tâches</h1>

<table>
  <thead>
    <tr>
      <th>Tâches À Faire:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= link_to 'Montrer', task %></td>
        <td><%= link_to 'Editer', edit_task_path(task) %></td>
        <td><%= link_to 'Supprimer', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle Tâche', new_task_path %>

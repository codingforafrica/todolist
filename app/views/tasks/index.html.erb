<p id="notice"><%= notice %></p>

<h1>Liste des Tâches </h1>

<table>
  <thead>
    <tr>
      <th>Tâches À Faire:</th>
      <th>Statut ou State:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Montrer', task %></td>
        <td><%= link_to 'Editer', edit_task_path(task) %></td>
        <td><%= link_to 'Supprimer', task, method: :delete, data: { confirm: 'Confirmer Suppression?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

